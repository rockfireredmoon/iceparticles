#!/bin/bash

CACHE_DIR="${HOME}/.cache/iceparticles"
mkdir -p "${CACHE_DIR}"
pushd "${CACHE_DIR}"
for i in /usr/lib/iceparticles/* ; do
	basename="$(basename ${i})"
	if [ ! -f "${basename}" -a ! -L "${basename}" ]; then
		ln -s "${i}" . 2>/dev/null
	fi
done

if [ ! -f logging.properties ] ; then
	ln -sf /etc/iceparticles/logging.properties logging.properties
fi 
if [ $# = 0 ] ; then
	java -jar /usr/lib/iceparticles/getdown.jar .
else
	java -jar /usr/lib/iceparticles/getdown.jar . "" $@
fi 